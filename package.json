{
  "name": "node-ts-skeleton",
  "version": "1.0.0",
  "description": "Neo9 Node MicroService Skeleton",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node -- src/index.ts",
    "build": "rimraf dist/ && tsc && copyfiles package.json dist/",
    "start": "node dist/src/",
    "lint": "tslint src/*.ts src/modules/*.ts src/modules/**/*.ts",
    "test": "npm run lint && npm run build && ava --verbose dist/test/",
    "postinstall": "./bin/setup-git-hooks && npm run build"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "express-validation": "^1.0.2",
    "fqdn": "^0.0.3",
    "helmet": "^3.6.0",
    "joi": "^10.4.2",
    "jsonwebtoken": "^7.4.1",
    "mongodb": "^2.2.26",
    "n9-node-conf": "^1.0.3",
    "n9-node-log": "^2.0.0",
    "n9-node-micro": "^1.0.2",
    "n9-node-utils": "^1.0.1",
    "source-map-support": "^0.4.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/joi": "^10.3.2",
    "@types/lodash": "^4.14.64",
    "@types/mongodb": "^2.2.2",
    "@types/node": "^7.0.18",
    "ava": "^0.19.1",
    "copyfiles": "^1.2.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  }
}

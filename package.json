{
  "name": "node-ts-skeleton",
  "version": "1.0.0",
  "description": "REST API with Node.js & TypeScript.",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node -- src/index.ts",
    "build": "rimraf dist/ && tsc && copyfiles package.json dist/",
    "start": "node dist/src/",
    "lint": "tslint src/**/*.ts",
    "test": "npm run lint && npm run build && ava --verbose dist/test/",
    "postinstall": "./bin/setup-git-hooks && npm run build"
  },
  "dependencies": {
    "@newrelic/native-metrics": "^2.1.1",
    "@types/bcrypt": "^1.0.0",
    "awaiting": "^2.2.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "debug": "^2.6.4",
    "express": "^4.15.2",
    "fqdn": "^0.0.3",
    "mongodb": "^2.2.26",
    "morgan": "^1.8.1",
    "morgan-debug": "^2.0.0",
    "newrelic": "^1.38.2",
    "schema-inspector": "^1.6.8",
    "socket.io": "^1.7.3",
    "source-map-support": "^0.4.14"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.63",
    "@types/mongodb": "^2.2.2",
    "@types/node": "^7.0.14",
    "@types/socket.io": "^1.4.29",
    "ava": "^0.19.1",
    "copyfiles": "^1.2.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  }
}

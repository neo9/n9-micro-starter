    "debug": "^2.6.4",
    "express": "^4.15.2",
    "express-jwt": "^5.3.0",
    "express-validation": "^1.0.2",
    "fqdn": "^0.0.3",
    "glob": "^7.1.1",
    "glob-promise": "^3.1.0",
    "helmet": "^3.6.0",
    "joi": "^10.4.1",
    "joi-to-json-schema": "^3.0.0",
    "jsonwebtoken": "^7.4.0",
    "mongodb": "^2.2.26",
    "morgan": "^1.8.1",
    "morgan-debug": "^2.0.0",
    "newrelic": "^1.38.2",
    "socket.io": "^2.0.1",
